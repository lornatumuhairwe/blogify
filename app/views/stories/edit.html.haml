Edit #{@story.title}
= form_with scope: @story, url: story_path, method: :put, local: true do |f|
  %p
    = f.label :title
    %br
    = f.text_field :title, class: 'form-control'
  %p
    = f.label :content
    %br
    = f.text_area :content, rows: 3, class: 'form-control'
  %p
    = f.submit 'Update Story', class: 'btn btn-success'